<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context="cn.com.geeeeker.field.summonerssimulator.ui.addFuwen">

    //固定的符文列表表头
    <TableLayout
        android:layout_width="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:id="@+id/fuwenliebiaobiaotou"
        >
        <TableRow
            android:layout_height="48dp"
            android:layout_width="wrap_content">
            <TextView android:text="ID"
                android:layout_width="40dp"
                android:padding="8dp"
                android:layout_height="36dp"
                android:background="#49392f"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_margin="0.5dp"
                />
            <TextView android:text="名称"
                android:layout_width="89dp"
                android:padding="8dp"
                android:layout_height="36dp"
                android:background="#49392f"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_margin="0.5dp"
                />
            <TextView android:text="种类"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="#49392f"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_margin="0.5dp"/>

        </TableRow>>

    </TableLayout>


    //符文列表，可滚动
    <ScrollView
        android:layout_width="180dp"
        android:layout_height="480dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/fuwenliebiaobiaotou"
        >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            >
            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:text="1"
                    android:layout_width="40dp"
                    android:padding="10dp"
                    android:background="#4f3118"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_margin="0.5dp"
                    />
                <TextView android:text="符文1"
                    android:layout_width="89dp"
                    android:padding="10dp"
                    android:background="#4f3118"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_margin="0.5dp"
                    />
                <TextView android:text="速度"
                    android:layout_width="48dp"
                    android:padding="10dp"
                    android:background="#4f3118"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_margin="0.5dp"/>

            </TableRow>>
        </TableLayout>
    </ScrollView>


    //符文详情

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="500dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/fuwenliebiaobiaotou">

        //主属性
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            </LinearLayout>

        //前缀属性
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        //副属性1
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
        //副属性2
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
        //副属性3
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
        //副属性4
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>



    </LinearLayout>




</RelativeLayout>
